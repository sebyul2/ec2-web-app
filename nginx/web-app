upstream web-app {
    server app:4000;
}

server {
    listen      80;
    server_name _;

    location / {
        expires -1;
        proxy_pass http://app:4000;
    }
}

server {
    listen      81;
    server_name _;

    location / {
        expires -1;
        proxy_pass http://app:4001;
    }
}