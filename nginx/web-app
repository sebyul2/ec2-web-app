upstream app {
    server localhost:4000;
}

server {
    listen       80;
    server_name	_;

    proxy_max_temp_file_size 8192m;
    proxy_buffers 8 64m;
    proxy_buffer_size 64m;

    location ~* ^.+\.(jpg|jpeg|gif|png|ico|css|rtf|js|flv|swf|html|htm|woff|ttf|cur|svg)$ {
        proxy_cache cache;
        proxy_cache_valid 30m;
    }

    location /static {
    	proxy_cache cache;
	    proxy_cache_valid 30m;
    }

    location / {
        expires -1;
        proxy_pass http://app/;
        proxy_redirect  off;
    }
}